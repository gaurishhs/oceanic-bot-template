{
    "compilerOptions": {
        "target": "es2021",
        "experimentalDecorators": true,
        "module": "commonjs",
        "resolveJsonModule": true,
        "allowJs": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "lib",
        "removeComments": true,
        "importsNotUsedAsValues": "remove",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "alwaysStrict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "src"
    ],
}